<nav class="item-actions">
    {% for button in buttons %}
        <a class="pure-button item-action-button{%
            if button.classes is defined %} {{ button.classes }}{% endif
        %}" href="{{ button.url }}"
        {% if button.title is defined %}
            title="{{ button.title }}"
        {% endif %}
        >{{ button.caption|raw }}{%
            if button.icon is defined %} <span class="fa fa-{{ button.icon }}"></span>{% endif %}</a>
    {% endfor %}
</nav>
