{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <div class="alert alert-danger" role="alert">
            <ul>
                {%- for error in errors -%}
                    <li>{{ error.message }}</li>
                {%- endfor -%}
            </ul>
        </div>
    {%- endif -%}
{%- endblock form_errors -%}