{% block integer_row %}
    <div class="form-group">
        {{ block('label') }}
        {{ block('widget_errors') }}
        <input type="number"
                class="form-control{% if attr.extraClasses is defined %} {{ attr.extraClasses }}{% endif %}"
                {{ block('widget_attribs') }}
                {% if value is not empty %}value="{{ value }}" {% endif %}
        >
        {% if attr.help is defined %}
            <small id="{{ id }}help" class="form-text text-muted">{{ attr.help|raw }}</small>
        {% endif %}
    </div>
{% endblock %}
