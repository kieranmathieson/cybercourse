    {% set badData = true %}
{% endif %}
{% set validTypes = ['text', 'number', 'password', 'hidden', 'email', 'url'] %}
{% if widget.type is defined %}
    {% if not widget.type in validTypes %}
        <p class="bug">Invalid widget type: {{ widget.type }}</p>
        {% set badData = true %}
    {% endif %}
{% endif %}
