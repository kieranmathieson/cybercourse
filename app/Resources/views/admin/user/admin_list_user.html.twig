{% extends 'base.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <h1>Users</h1>
        <p>Authorized users only.</p>
        <ul>
            {% for user in users %}
                <li>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}">{{ user.username }}</a>
                </li>
            {% endfor %}
        </ul>

    {% endif %}

{% endblock %}